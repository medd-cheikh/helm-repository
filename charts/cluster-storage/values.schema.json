{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "context": {
            "type": "object",
            "properties": {
                "app": {
                    "type": "string"
                },
                "cluster": {
                    "type": "string"
                },
                "component": {
                    "type": "string"
                },
                "environment": {
                    "type": "string"
                },
                "scope": {
                    "type": "string"
                }
            }
        },
        "storageClasses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "allowVolumeExpansion": {
                        "type": "boolean"
                    },
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "parameters": {
                        "type": "string"
                    },
                    "provisioner": {
                        "type": "string"
                    },
                    "reclaimPolicy": {
                        "type": "string"
                    },
                    "volumeBindingMode": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
